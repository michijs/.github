{
  "files": {
    "ignore": ["*/*.json"]
  },
  "formatter": {
    "enabled": true,
    "indentStyle": "space",
    "indentSize": 2
  },
  "organizeImports": {
    "enabled": true
  },
  "linter": {
    "enabled": true,
    "rules": {
      "a11y": {
        "useValidAnchor": "off"
      },
      "complexity": {
        "useSimplifiedLogicExpression": "off"
      },
      "suspicious": {
        "noExplicitAny": "off",
        "noDoubleEquals": "off"
      },
      "style": {
        "useSingleVarDeclarator": "off",
        "useBlockStatements": "off",
        "noImplicitBoolean": "off"
      },
      "performance": {
        "noDelete": "off"
      }
    }
  }
}